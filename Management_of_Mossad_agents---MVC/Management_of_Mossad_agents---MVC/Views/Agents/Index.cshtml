@model IEnumerable<Management_of_Mossad_agents___MVC.Models.Agent>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>סוכנים</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <script>
        setTimeout(function(){
           window.location.reload(1);
        }, 5000);
    </script>
    <div class="container">
        <h1>סוכנים</h1>
        <table>
            <thead>
                <tr>
                    <th>מזהה סוכן</th>
                    <th>כינוי</th>
                    <th>תמונה</th>
                    <th>מיקום</th>
                    <th>סטטוס</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agent in Model)
                {
                    <tr>
                        <td>@agent.id</td>
                        <td>@agent.nickname</td>
                        <td><img src="@agent.photoUrl" alt="@agent.nickname" width="100" height="100"></td>
                        <td>@agent.location?.X, @agent.location?.Y</td>
                        <td>@agent.status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>